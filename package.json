{
  "name": "my-react-app",
  "version": "1.0.0",
  "description": "phase 3 ecommerce project",
  "main": "server.js",
  "dependencies": {
    "axios": "^0.19.0",
    "bootstrap": "^4.3.1",
    "chai-http": "^4.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.1",
    "if-env": "^1.0.4",
    "jquery": "^3.4.1",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "nodemon": "^1.19.2",
    "popper.js": "^1.16.0",
    "react-bootstrap": "^1.0.0-beta.14",
    "request": "^2.88.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "mocha": "^10.2.0"
  },
  "scripts": {
    "test": "mocha",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "Brian Shin",
  "license": "MIT"
}
